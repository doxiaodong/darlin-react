{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "strictNullChecks": false,
    "noUnusedLocals": true,
    "declaration": false,
    "noImplicitAny": false,
    "removeComments": true,
    "experimentalDecorators": true,
    "baseUrl": "./src",
    "lib": [
      "es2015",
      "dom"
    ],
    "jsx": "react",
    "outDir": "dist",
    "types": [
      "react",
      "react-dom",
      "react-router",
      "i18next",
      "react-tap-event-plugin",
      "material-ui",
      "crypto-js",
      "jest",
      "node",
      "emojione",
      "highlight.js",
      "marked",
      "mathjax"
    ]
  },
  "exclude": [
    "node_modules"
  ]
}
